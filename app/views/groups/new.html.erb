<div id="new_group">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>New Group</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= render 'form', group: @group %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to @group.menu.name, edit_menu_path(@group.menu), class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>
