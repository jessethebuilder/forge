<p id="notice"><%= notice %></p>

<h1>Order Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Account</th>
      <th>Message type</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_notifications.each do |order_notification| %>
      <tr>
        <td><%= order_notification.message %></td>
        <td><%= order_notification.account_id %></td>
        <td><%= order_notification.message_type %></td>
        <td><%= order_notification.order_id %></td>
        <td><%= link_to 'Show', order_notification %></td>
        <td><%= link_to 'Edit', edit_order_notification_path(order_notification) %></td>
        <td><%= link_to 'Destroy', order_notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

