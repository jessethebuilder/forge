<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Order</th>
      <th>Price</th>
      <th>Data</th>
      <th>Active</th>
      <th>Account</th>
      <th>Menu</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.order %></td>
        <td><%= product.price %></td>
        <td><%= product.data %></td>
        <td><%= product.active %></td>
        <td><%= product.account_id_id %></td>
        <td><%= product.menu_id_id %></td>
        <td><%= product.group_id_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

