<div class="record_table">
  <table class="table table-striped sortable" data-sortable-type="product">
    <thead>
      <tr>
        <th></th>
        <th>Id</th>
        <th>Active</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% products.each do |product| %>
        <%= content_tag :tr, data: {id: product.id} do %>
          <td class="sorter">!sorter!</td>
          <td><%= product.id %></td>
          <td>
            <%= form_with(model: product, local: true, index: product.id) do |form| %>
              <div class="form-check">
                <%= form.check_box :active, class: 'form-check-input active' %>
              </div>
            <% end %>
          </td>
          <td><%= product.name %></td>
          <td>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
