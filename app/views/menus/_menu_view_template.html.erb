<script type="text/template" id="menu_view_template">
  <%= full_width_container do %>
    <div class="menu_fields">
      <div class="form-group">
        <input type="text" name="name"
               class="form-control menu_field"
               placeholder="Name"
               value="<%%= name %>"/>
      </div>

      <div class="form-group">
        <textarea name="description"
                  class="form-control menu_field"
                  placeholder="Description"><%%= description %></textarea>
      </div>

      <div class="form-group">

      </div>
    </div>

    <div id="groups"></div>
  <% end %>
</script>
